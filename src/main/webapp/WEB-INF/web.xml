<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <servlet>
    <description>Retrieving the record from the database</description>
    <display-name>RetrieveDAO</display-name>
    <servlet-name>RetrieveDAO</servlet-name>
    <servlet-class>com.controllers.RetrieveDAO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RetrieveDAO</servlet-name>
    <url-pattern>/RetrieveDAO</url-pattern>
  </servlet-mapping>
  <display-name>ProductMVC</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Registering a new account</description>
    <display-name>RegisterDAO</display-name>
    <servlet-name>RegisterDAO</servlet-name>
    <servlet-class>com.controllers.RegisterDAO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterDAO</servlet-name>
    <url-pattern>/RegisterDAO</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Validating the Login credentials</description>
    <display-name>LoginDAO</display-name>
    <servlet-name>LoginDAO</servlet-name>
    <servlet-class>com.controllers.LoginDAO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginDAO</servlet-name>
    <url-pattern>/LoginDAO</url-pattern>
  </servlet-mapping>
</web-app>